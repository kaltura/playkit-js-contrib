{
  "name": "root",
  "private": true,
  "license": "AGPL-3.0",
  "author": "Kaltura",
  "repository": {
    "type": "git",
    "url": "https://github.com/kaltura/playkit-js-ovp"
  },
  "scripts": {
    "precommit": "lint-staged",
    "build": "lerna run build",
    "prepublish:latest": "npm run build &&  lerna version --conventional-commits",
    "publish:latest": "lerna publish from-package",
    "prepublish:next": "npm run build &&  lerna version prerelease --preid next --conventional-commits",
    "publish:next": "lerna publish from-package --dist-tag next",
    "publish:canary": "npm run build && lerna publish --canary --preid next",
    "bootstrap": "lerna bootstrap && lerna link",
    "lerna": "lerna"
  },
  "devDependencies": {
    "dts-bundle-generator": "^3.0.0",
    "fs-extra": "^7.0.1",
    "husky": "^1.3.1",
    "lerna": "^3.13.4",
    "lint-staged": "^8.1.5",
    "npm-install-peers": "^1.2.1",
    "peer-deps-externals-webpack-plugin": "^1.0.4",
    "prettier": "^1.16.4",
    "ts-loader": "^5.3.3",
    "typescript": "^3.2.2",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.0",
    "webpack-merge": "^4.2.1",
    "webpack-node-externals": "^1.7.2"
  },
  "lint-staged": {
    "*.{ts,tsx,json,css,html}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "peerDependencies": {
    "preact": "^8.4.2"
  },
  "dependencies": {}
}
