{
  "name": "root",
  "private": true,
  "license": "AGPL-3.0",
  "author": "Kaltura",
  "repository": {
    "type": "git",
    "url": "https://github.com/kaltura/playkit-js-contrib"
  },
  "scripts": {
    "clean": "lerna run clean",
    "build": "lerna run build",
    "publish:latest": "npm run clean && npm run build &&  lerna version --conventional-commits && lerna publish from-package && npm run fix-npm-next-tag",
    "publish:next": "npm run clean && npm run build &&  lerna version prerelease --preid next --conventional-commits && lerna publish from-package --dist-tag next",
    "fix-npm-next-tag": "lerna exec --no-bail --no-private --no-sort --stream -- '[ -n \"$(npm v . dist-tags.next)\" -a \"$(npm v . dist-tags.next)\" != \"$(npm v . dist.tags.latest)\" ] && npm dist-tag add ${LERNA_PACKAGE_NAME}@$(npm v . dist-tags.latest) next'",
    "reset": "lerna run reset && rm -rf node_modules",
    "setup": "npm i && lerna link",
    "lerna": "lerna",
    "deploy:manual-version": "node scripts/manual-version.js"
  },
  "devDependencies": {
    "@types/linkify-it": "^2.1.0",
    "@types/socket.io-client": "^1.4.32",
    "chalk": "^2.4.2",
    "copy-webpack-plugin": "^5.0.4",
    "css-loader": "^3.2.0",
    "fs-extra": "^8.1.0",
    "husky": "^1.3.1",
    "lerna": "^3.13.4",
    "linkify-it": "^2.2.0",
    "lint-staged": "^8.1.5",
    "node-sass": "^4.12.0",
    "preact": "^8.4.2",
    "prettier": "^1.16.4",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "svg-url-loader": "^3.0.0",
    "ts-loader": "^6.0.4",
    "typescript": "^3.2.2",
    "uuid": "^3.3.3",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.0",
    "webpack-merge": "^4.2.1",
    "webpack-node-externals": "^1.7.2"
  },
  "lint-staged": {
    "*.{ts,tsx,json,css,html}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@playkit-js-contrib/common": "file:packages/common",
    "@playkit-js-contrib/linkify": "file:packages/linkify",
    "@playkit-js-contrib/plugin": "file:packages/plugin",
    "@playkit-js-contrib/push-notifications": "file:packages/push-notifications",
    "@playkit-js-contrib/ui": "file:packages/ui"
  }
}
