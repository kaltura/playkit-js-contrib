  "author": "Kaltura",
  "repository": {
    "type": "git",
    "url": "https://github.com/kaltura/playkit-js-ovp"
  },
  "scripts": {
    "clean": "rm -rf lib",
    "type-check": "tsc --noEmit",
    "serve": "npm run type-check -- --watch",
    "build": "webpack --mode production && npm run build:declaration",
    "build:declaration": "dts-bundle-generator --config dts-config.js",
    "setup": "npm link",
    "reset": "npm run clean && rm -rf node_modules",
    "analyze": "npm run build && npx source-map-explorer lib/index.js"
  },
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "devDependencies": {
    "dts-bundle-generator": "^3.0.0",
    "fs-extra": "^7.0.1",
    "preact": "^8.4.2",
    "ts-loader": "^5.3.3",
    "typescript": "^3.2.2",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.0",
    "webpack-merge": "^4.2.1",
    "webpack-node-externals": "^1.7.2"
  },
  "peerDependencies": {
    "preact": "^8.4.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "lib",
    "LICENSE",
    "CHANGELOG.md"
  ]
}
